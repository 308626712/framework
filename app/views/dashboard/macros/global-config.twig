{% macro configImage(name, description, type, value) %}
	    <div class="form-group{% if has_error(name) %} has-error{% endif %}">
		    <div class="col-xs-12 col-md-6">
				<label for="{{ name }}">{{ description }}</label>
			    <div class="input-group">
			    	<span class="input-group-btn">
			    		<img id="{{name}}-thumbnail" src="{{ value }}" style="max-height: 30px; max-width: 30px;" />
			    	</span>
			    	<input type="text" name="{{ name }}" id="{{ name }}" class="form-control" value="{{ value }}">
			    	<span class="input-group-btn">
			    		<button type="button" class="btn btn-default image-preview" data-target="{{ name }}"><i class="fa fa-eye"></i></button>
			    		<button type="button" class="btn btn-default image-select" data-target="{{ name }}"><i class="fa fa-picture-o"></i></button>
			    	</span>
			    </div>
			    <span id="{{ id }}-help-block" class="help-block">{{ error(name) }}</span>
		    </div>
		</div>
{% endmacro %}