{% block title %}Skeleton-PHP || Dashboard{% endblock %}

{% block stylesheets %}
    <link href="/assets/default/css/dataTables.bootstrap.css" rel="stylesheet">
    <link href="/assets/default/css/dataTables.responsive.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">User Management</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    User Accounts
                </div>

                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Roles</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        	{% for user in users %}
                        	    <tr>
                        	    	<td>{{ user.first_name }}</td>
                        	    	<td>{{ user.last_name }}</td>
                        	    	<td>{{ user.email }}</td>
                        	    	<td>{{ user.username }}</td>
                        	    	<td>
                                        {% for userRole in user.roles %}
                                            {{ userRole.name }}{% if not loop.last %},{% endif %}
                                        {% endfor %}
                                    </td>
                        	    	<td>
                    	    			<a href="{{ path_for('admin-users-edit', {'user_id': user.id}) }}" class="btn btn-primary btn-xs">
                    	    				<span class="fa fa-fw fa-pencil"></span>
                    	    			</a>
                                        {% if user.id != 1 %}
                                        <a href="{{ path_for('admin-users-delete', {'user_id': user.id}) }}" class="btn btn-primary btn-xs">
                                            <span class="fa fa-fw fa-pencil"></span>
                                        </a>
                                        {% endif %}
                        	    	</td>
                        	    </tr>
                        	{% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    User Roles
                </div>

                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Slug</th>
                                <th>Permissions</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for role in roles %}
                                <tr>
                                    <td>{{ role.name }}</td>
                                    <td>{{ role.slug }}</td>
                                    <td>
                                        {% for key,perm in role.permissions|json_decode %}
                                            {% if perm == 1 %}{{key}}{% endif %}{% if not loop.last %},{% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <a href="{{ path_for('admin-roles-edit', {'role': role.id}) }}" class="btn btn-primary btn-xs">
                                            <span class="fa fa-fw fa-pencil"></span>
                                        </a>
                                        <a href="{{ path_for('admin-roles-delete', {'role': role.id}) }}" class="btn btn-danger btn-xs" onClick="return confirm('Are you sure you could like to delete this role?')">
                                            <span class="fa fa-fw fa-close"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Add User Role
                </div>

                <div class="panel-body">
                    <form action="{{ path_for('admin-roles-add') }}" method="POST" role="form">
           
                        <div class="form-group col-md-6">
                            <label for="">Name</label>
                            <input type="text" name="role_name" class="form-control" id="role_name" placeholder="Role Name">
                        </div>

                        <div class="form-group col-md-6">
                            <label for="">Slug</label>
                            <input type="text" name="role_slug" class="form-control" id="role_slug" placeholder="Role Slug">
                        </div>
                    
                        <div class="form-group col-md-4 col-md-offset-4">
                            <button type="submit" class="btn btn-primary btn-primary form-control">Add Role <span class="fa fa-fw fa-arrow-right"></span></button>
                        </div>
                        {{ csrf() }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script src="/assets/default/js/jquery.dataTables.min.js"></script>
    <script src="/assets/default/js/dataTables.bootstrap.min.js"></script>
    <script src="/assets/default/js/dataTables.responsive.js"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
            responsive: true,

        });
    });
    </script>
{% endblock %}