{% extends 'base.twig' %}

{% import 'macros/form.twig' as form %}

{% block title %}{{ config['site-name'] }} || Registration{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">Register</div>
                <div class="panel-body">
                    <form action="{{ path_for('register') }}" method="POST">
                        {{ form.text('first_name', null, 'first_name', 'First Name') }}
                        {{ form.text('last_name', null, 'last_name', 'Last Name') }}
                        {{ form.text('username', null, 'username', 'Username', null, 'username') }}
                        {{ form.text('email', null, 'email', 'Email', null, 'email') }}
                        {{ form.text('password', null, 'password', 'Password', null, 'password') }}
                        {{ form.text('password-confirm', null, 'password-confirm', 'Confirm password', null, 'password') }}
                        {{ form.custom('recaptcha', recaptcha()) }}
                        
                        {{ csrf() }}
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascript %}
    {{ recaptchaJs() }}
{% endblock %}
